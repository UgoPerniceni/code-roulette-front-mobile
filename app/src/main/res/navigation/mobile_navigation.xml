<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="fr.esgi.projet_annuel_4_eme_annee_front_android.ui.fragment.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="fr.esgi.projet_annuel_4_eme_annee_front_android.ui.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_rankingFragment"
            app:destination="@id/navigation_ranking" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />

    </fragment>

    <fragment
        android:id="@+id/navigation_ranking"
        android:name="fr.esgi.projet_annuel_4_eme_annee_front_android.ui.fragment.RankingFragment"
        android:label="@string/title_ranking"
        tools:layout="@layout/fragment_ranking" >
        <action
            android:id="@+id/action_navigation_ranking_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_ranking_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_ranking_to_navigation_rank_user"
            app:destination="@id/navigation_rank_user" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="fr.esgi.projet_annuel_4_eme_annee_front_android.ui.fragment.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_ranking"
            app:destination="@id/navigation_ranking" />
    </fragment>

    <fragment
        android:id="@+id/navigation_rank_user"
        android:name="fr.esgi.projet_annuel_4_eme_annee_front_android.ui.fragment.UserRankFragment"
        android:label="@string/title_user_rank"
        tools:layout="@layout/fragment_user_rank" >
        <action
            android:id="@+id/action_navigation_rank_user_to_navigation_ranking"
            app:destination="@id/navigation_ranking" />
    </fragment>
</navigation>